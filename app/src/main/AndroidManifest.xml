<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.finalproject">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/Theme.RecipeSearch"
      android:usesCleartextTraffic="true"
      tools:targetApi="m">

    <activity
        android:name="com.project.recipesearch.MainActivity2"
        android:label="@string/title_activity_main2"
        android:theme="@style/Theme.RecipeSearch.NoActionBar" />
    <activity android:name="com.project.recipesearch.DetailsActivity" />
    <activity android:name="com.project.recipesearch.SearchActivity" />
    <activity android:name="com.project.recipesearch.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <meta-data
        android:name="com.google.android.actions"
        android:resource="@xml/network_security_config" />
  </application>

  <uses-permission android:name="android.permission.INTERNET" />

</manifest>